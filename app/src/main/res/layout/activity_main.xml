<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/equals"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textAlignment="viewEnd"
        android:text="0"
        android:textSize="80dp">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteLastNum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            android:text="CE"
            android:textSize="30dp"
            app:backgroundTint="@android:color/darker_gray"
            android:textColor="@color/black"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteAll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            android:text="C"
            android:textSize="30dp"
            app:backgroundTint="@android:color/darker_gray"
            android:textColor="@color/black"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            android:text="BS"
            android:textSize="30dp"
            app:backgroundTint="@android:color/darker_gray"
            android:textColor="@color/black"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/actionDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            android:text="/"
            android:textSize="30dp"
            app:backgroundTint="@android:color/darker_gray"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/num7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            android:text="7"
            android:textSize="30dp"
            app:backgroundTint="#D3D3D3"
            android:textColor="@color/black"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/num8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            android:text="8"
            android:textSize="30dp"
            app:backgroundTint="#D3D3D3"
            android:textColor="@color/black"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/num9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            android:text="9"
            android:textSize="30dp"
            app:backgroundTint="#D3D3D3"
            android:textColor="@color/black"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/actionMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            android:text="x"
            android:textSize="30dp"
            app:backgroundTint="@android:color/darker_gray"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/num4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            android:text="4"
            android:textSize="30dp"
            app:backgroundTint="#D3D3D3"
            android:textColor="@color/black"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/num5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            android:text="5"
            android:textSize="30dp"
            app:backgroundTint="#D3D3D3"
            android:textColor="@color/black"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/num6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            android:text="6"
            android:textSize="30dp"
            app:backgroundTint="#D3D3D3"
            android:textColor="@color/black"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/actionMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            android:text="-"
            android:textSize="30dp"
            app:backgroundTint="@android:color/darker_gray"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/num1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            android:text="1"
            android:textSize="30dp"
            app:backgroundTint="#D3D3D3"
            android:textColor="@color/black"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/num2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            android:text="2"
            android:textSize="30dp"
            app:backgroundTint="#D3D3D3"
            android:textColor="@color/black"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/num3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            android:text="3"
            android:textSize="30dp"
            app:backgroundTint="#D3D3D3"
            android:textColor="@color/black"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/actionPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            android:text="+"
            android:textSize="30dp"
            app:backgroundTint="@android:color/darker_gray"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/actionNegative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            android:text="+/-"
            android:textSize="30dp"
            app:backgroundTint="@android:color/darker_gray"
            android:textColor="@color/black"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/num0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            android:text="0"
            android:textSize="30dp"
            app:backgroundTint="#D3D3D3"
            android:textColor="@color/black"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/floatNum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            android:text="."
            android:textSize="30dp"
            app:backgroundTint="@android:color/darker_gray"
            android:textColor="@color/black"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/actionEqual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            android:text="="
            android:textSize="30dp"
            app:backgroundTint="@android:color/darker_gray"
            android:textColor="@color/black"/>
    </LinearLayout>


</LinearLayout>